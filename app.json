{
  "expo": {
    "name": "tira",
    "displayName": "Tira",
    "version": "1.0.0",
    "slug": "tira",
    "orientation": "portrait",
    "icon": "./assets/images/logoTira.png",
    "scheme": "tira",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Ứng dụng cần quyền truy cập vị trí để chấm công.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Ứng dụng cần quyền truy cập vị trí trong nền để tự động chấm công khi bạn ra/vào khu vực."
      },
      "bundleIdentifier": "com.chanhuy.Timekeepingmobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logoTira.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.chanhuy.Timekeepingmobile"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/logoTira.png"
    },
    "jsEngine": "hermes",
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logoTira.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Timekeeping to use your location."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
