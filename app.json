{
  "expo": {
    "name": "tira",
    "version": "1.0.0",
    "slug": "tira",
    "orientation": "portrait",
    "icon": "./src/assets/images/logoTira.png",
    "scheme": "tira",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": ["location", "fetch"],
        "PHPhotoLibraryPreventAutomaticLimitedAccessAlert": true,
        "NSLocationWhenInUseUsageDescription": "Ứng dụng cần quyền truy cập vị trí để chấm công.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Ứng dụng cần quyền truy cập vị trí trong nền để tự động chấm công khi bạn ra/vào khu vực.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.fink.Timekeepingmobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/logoTira.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
     "permissions": [
      "ACCESS_FINE_LOCATION",
      "ACCESS_COARSE_LOCATION",
      "ACCESS_BACKGROUND_LOCATION"
            ],
      "package": "com.fink.Timekeepingmobile"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./src/assets/images/logoTira.png"
    },
    "jsEngine": "hermes",
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/logoTira.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Timekeeping to use your location."
        }
      ],
      "expo-secure-store",
      "react-native-bottom-tabs",
      ["expo-build-properties", {
        "ios": {
          "useFrameworks": "static"
        }
      }]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "12115797-f0c7-41f5-b96d-a10b363f181a"
      }
    }
  }
}
